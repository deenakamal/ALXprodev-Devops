#!/bin/bash

# Directory containing PokÃ©mon JSON files
DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Initialize CSV file with header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through each JSON file
for file in "$DATA_DIR"/*.json; do
    # Extract values using jq
    name=$(jq -r '.name' "$file" | sed 's/^./\U&/')  # Capitalize
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f",$1/10}')  # dm -> m
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f",$1/10}')  # hg -> kg

    # Append to CSV
    echo "$name,$height,$weight" >> "$REPORT_FILE"
done

echo "CSV Report generated at: $REPORT_FILE"

# Calculate average height and weight using awk
avg=$(awk -F',' 'NR>1 {h+=$2; w+=$3; c++} END {printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", h/c, w/c}' "$REPORT_FILE")

echo "$avg"
