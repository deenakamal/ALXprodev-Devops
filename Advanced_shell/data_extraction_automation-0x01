#!/bin/bash

# Input JSON file
DATA_FILE="data.json"

# Extract name, height, weight, and type using jq
name=$(jq -r '.name' "$DATA_FILE" | sed 's/^./\U&/')   # Capitalize first letter
height=$(jq -r '.height' "$DATA_FILE" | awk '{printf "%.1f",$1/10}')  # Convert dm to m
weight=$(jq -r '.weight' "$DATA_FILE" | awk '{printf "%.0f",$1/10}')  # Convert hg to kg
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/^./\U&/')   # Capitalize

# Print formatted output
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
